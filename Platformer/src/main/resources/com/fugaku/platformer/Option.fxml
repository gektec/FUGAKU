<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane
        fx:id="root"
        alignment="CENTER"
        prefHeight="720.0"
        prefWidth="1280.0"
        stylesheets="@styles.css"
        xmlns:fx="http://javafx.com/fxml/1"
        xmlns="http://javafx.com/javafx/22"
        fx:controller="com.fugaku.platformer.controller.OptionScreenController">


    <!-- Organize buttons in a GridPane with three columns -->
    <GridPane alignment="CENTER" hgap="40" vgap="20">


        <Button
                fx:id="defaultButton"
                onAction="#handleDefault"
                text="Default"
                prefWidth="200.0"
                GridPane.rowIndex="0" GridPane.columnIndex="0"
        />

        <Button
                fx:id="yellowButton"
                onAction="#handleYellow"
                text="Yellow"
                textFill="yellow"
                prefWidth="200.0"
                GridPane.rowIndex="0" GridPane.columnIndex="1"
        />

        <Button
                fx:id="blueButton"
                onAction="#handleBlue"
                text="Blue"
                textFill="blue"
                prefWidth="200.0"
                GridPane.rowIndex="0" GridPane.columnIndex="2"
        />

        <Button
                fx:id="purpleButton"
                onAction="#handlePurple"
                text="Purple"
                textFill="purple"
                prefWidth="200.0"
                GridPane.rowIndex="1" GridPane.columnIndex="0"
        />

        <Button
                fx:id="orangeButton"
                onAction="#handleOrange"
                text="Orange"
                textFill="orange"
                prefWidth="200.0"
                GridPane.rowIndex="1" GridPane.columnIndex="1"
        />

        <Button
                fx:id="greenButton"
                onAction="#handleGreen"
                text="Green"
                textFill="green"
                prefWidth="200.0"
                GridPane.rowIndex="1" GridPane.columnIndex="2"
        />

        <Button
                fx:id="redButton"
                onAction="#handleRed"
                text="Red"
                textFill="red"
                prefWidth="200.0"
                GridPane.rowIndex="2" GridPane.columnIndex="0"
        />

        <Button
                fx:id="pinkButton"
                onAction="#handlePink"
                text="Pink"
                textFill="pink"
                prefWidth="200.0"
                GridPane.rowIndex="2" GridPane.columnIndex="1"
        />
    </GridPane>

</GridPane>