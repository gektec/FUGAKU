<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="root" alignment="CENTER" prefHeight="477.0" prefWidth="722.0" spacing="20" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.platformerplain.Controller.MenuScreenController">
    <!-- VBox to design background -->
    <Text text="Welcome to NGHMP!" />

    <Button fx:id="debugButton" onAction="#handleDebugMode" prefHeight="36.0" prefWidth="240.0" style="-fx-font-size: 16; -fx-background-color: #ad2222; -fx-text-fill: white;" text="Debug Mode" />

    <!-- Start Game Button -->
    <Button fx:id="startButton" onAction="#handleStartGame" prefHeight="36.0" prefWidth="120.0" style="-fx-font-size: 16; -fx-background-color: #4CAF50; -fx-text-fill: white;" text="Start Game" />

    <!-- Help Button -->
    <Button fx:id="helpButton" onAction="#handleHelp" prefHeight="36.0" prefWidth="120.0" style="-fx-font-size: 16; -fx-background-color: #2196F3; -fx-text-fill: white;" text="Help" />

    <!-- Exit Game Button -->
    <Button fx:id="exitButton" onAction="#handleExitGame" prefHeight="36.0" prefWidth="120.0" style="-fx-font-size: 16; -fx-background-color: #686868; -fx-text-fill: white;" text="Exit Game" />
</VBox>
