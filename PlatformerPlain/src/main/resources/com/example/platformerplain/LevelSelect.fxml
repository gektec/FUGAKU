<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<GridPane fx:id="root"
          alignment="CENTER"
          prefHeight="720.0"
          prefWidth="1280.0"
          hgap="40"
          vgap="40"
          stylesheets="@styles.css"
          xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/22"
          fx:controller="com.example.platformerplain.controller.LevelSelectScreenController">

    <Text text="SELECT A LEVEL"
          GridPane.rowIndex="0"
          GridPane.columnSpan="3"
          styleClass="subtitle"
          GridPane.halignment="CENTER"/>

    <Button fx:id="FirstLevel"
            onAction="#handleFirstLevel"
            text="I"
            prefWidth="100.0"
            GridPane.rowIndex="1"
            GridPane.columnIndex="0"
            GridPane.halignment="CENTER"/>

    <Button fx:id="SecondLevel"
            onAction="#handleSecondLevel"
            text="II"
            prefWidth="100.0"
            GridPane.rowIndex="1"
            GridPane.columnIndex="1"
            GridPane.halignment="CENTER"/>

    <Button fx:id="ThirdLevel"
            onAction="#handleThirdLevel"
            text="III"
            prefWidth="100.0"
            GridPane.rowIndex="1"
            GridPane.columnIndex="2"
            GridPane.halignment="CENTER"/>
</GridPane>
