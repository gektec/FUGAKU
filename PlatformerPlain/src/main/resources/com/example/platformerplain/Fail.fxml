<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane
        fx:id="root"
        prefHeight="400.0"
        prefWidth="600.0"
        stylesheets="@styles.css"
        xmlns:fx="http://javafx.com/fxml/1"
        xmlns="http://javafx.com/javafx/22"
        fx:controller="com.example.platformerplain.Controller.FailScreenController">

    <!-- background -->
    <StackPane>
        <Label style="-fx-background-image: url('/images/backgroundImage/Background.png'); -fx-background-size: cover; -fx-background-position: center;" />
    </StackPane>


    <VBox alignment="CENTER" spacing="30">
        <!-- title -->
        <Label text="Game Over!" alignment="CENTER">
            <font>
                <Font name="Arial Bold" size="100"/> <!-- 标题字体更大 -->
            </font>
            <style>
                -fx-text-fill: white;
                -fx-effect: dropshadow( gaussian , black , 10 , 0.5 , 0.0 , 0.0 );
            </style>
        </Label>

        <!-- Button -->
        <VBox alignment="CENTER" spacing="15">
            <Button
                    fx:id="MenuButton"
                    onAction="#handleMenu"
                    text="Menu"
                    prefWidth="200"
            />

            <Button
                    fx:id="RestartButton"
                    onAction="#handleRestart"
                    text="Restart"
                    prefWidth="200"
            />

            <Button
                    fx:id="ExitButton"
                    onAction="#handleExitGame"
                    text="Exit Game"
                    prefWidth="200"
            />
        </VBox>
    </VBox>
</StackPane>
