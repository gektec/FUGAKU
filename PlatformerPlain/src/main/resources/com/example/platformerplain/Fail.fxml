<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<GridPane
        fx:id="root"
        alignment="CENTER"
        prefHeight="400.0"
        prefWidth="600.0"
        hgap="30"
        vgap="30"
        stylesheets="@styles.css"
        xmlns:fx="http://javafx.com/fxml/1"
        xmlns="http://javafx.com/javafx/22"
        fx:controller="com.example.platformerplain.Controller.FailScreenController">

    <!--
        The placeholder area in the first row is used to create vertical spacing above the buttons.
    -->
    <Label text="Game                                   Over" GridPane.rowIndex="0" GridPane.columnSpan="3" alignment="CENTER">
        <font>
            <Font name="System" size="100"/>
        </font>
    </Label>

    <!--
        Buttons on the fail screen for user interaction.
        Each button, when clicked, invokes a specific
        action defined in the FailScreenController class.
    -->

    <Button
            fx:id="MenuButton"
            onAction="#handleMenu"
            mnemonicParsing="false"
            text="Menu"
            GridPane.rowIndex="2"
            GridPane.columnIndex="0"
    />

    <Button
            fx:id="RestartButton"
            onAction="#handleRestart"
            mnemonicParsing="false"
            text="Restart"
            GridPane.rowIndex="2"
            GridPane.columnIndex="1"
    />

    <Button
            fx:id="ExitButton"
            onAction="#handleExitGame"
            text="Exit Game"
            GridPane.rowIndex="2"
            GridPane.columnIndex="2"
    />

</GridPane>
