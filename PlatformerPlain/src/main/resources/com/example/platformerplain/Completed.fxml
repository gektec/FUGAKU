<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<GridPane
        fx:id="root"
        alignment="CENTER"
        prefHeight="400.0"
        prefWidth="600.0"
        hgap="30"
        vgap="30"
        xmlns:fx="http://javafx.com/fxml/1"
        xmlns="http://javafx.com/javafx/22"
        fx:controller="com.example.platformerplain.Controller.CompletedScreenController">

    <!--
        The placeholder area in the first row is used to create vertical spacing above the buttons.
    -->
    <Region GridPane.rowIndex="0" minHeight="50" />

    <!-- Score Label -->
    <Label fx:id="scoreLabel"
           text="score: 0"
           style="-fx-font-size: 20; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;"
           GridPane.rowIndex="0"
           GridPane.columnIndex="1"
           GridPane.halignment="CENTER"/>

    <!--
        Buttons on the fail screen for user interaction.
        Each button, when clicked, invokes a specific
        action defined in the FailScreenController class.
    -->

    <Button
            fx:id="MenuButton"
            onAction="#handleMenu"
            mnemonicParsing="false"
            text="Menu"
            style="-fx-font-size: 16; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20;"
            GridPane.rowIndex="2"
            GridPane.columnIndex="0"
    />

    <Button
            fx:id="ExitButton"
            onAction="#handleExitGame"
            text="Exit Game"
            style="-fx-font-size: 16; -fx-background-color: #F44336; -fx-text-fill: white; -fx-padding: 10 20;"
            GridPane.rowIndex="2"
            GridPane.columnIndex="2"
    />

</GridPane>
