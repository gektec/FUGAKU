<VBox fx:id="root" alignment="CENTER" prefHeight="250.0" prefWidth="222.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.platformerplain.Controller.FailScreenController">
    <!-- VBox to display fail message -->
    <Text text="You fail!" textAlignment="CENTER" wrappingWidth="141.14605855941772" />

    <HBox spacing="50" alignment="CENTER">
        <Button fx:id="ExitButton" onAction="#handleExitGame" text="Exit Game" />
        <Button fx:id="MenuButton" onAction="#handleMenu" mnemonicParsing="false" text="Menu"/>
    </HBox>
</VBox>
