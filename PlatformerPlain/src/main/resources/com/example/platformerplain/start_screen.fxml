<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="root" alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.platformerplain.Controller.StartScreenController">
    <!--  VBox to design background -->
    <Text text="Welcome to Platformer Game!" />
    <Button fx:id="startButton" onAction="#handleStartGame" prefHeight="23.0" prefWidth="82.0" text="Start Game" />
    <Button fx:id="helpButton" onAction="#handleHelp" prefHeight="23.0" prefWidth="82.0" text="Help" />
    <Button fx:id="ExitButton" onAction="#handleExitGame" prefHeight="23.0" prefWidth="82.0" text="Exit Game" textAlignment="CENTER" />
</VBox>
