<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="root" alignment="CENTER" prefHeight="477.0" prefWidth="722.0" spacing="20" stylesheets="@styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.platformerplain.Controller.StartScreenController">
    <!-- VBox to design background -->
    <Text text="Welcome to Platformer Game!" />

    <!-- Start Game Button -->
    <Button fx:id="startButton" onAction="#handleStartGame" text="Start Game" />

    <!-- Help Button -->
    <Button fx:id="helpButton" onAction="#handleHelp" prefHeight="23.0" prefWidth="80.0" text="Help" />

    <!-- Exit Game Button -->
    <Button fx:id="exitButton" onAction="#handleExitGame" prefHeight="23.0" prefWidth="80.0" text="Exit Game" />
</VBox>
