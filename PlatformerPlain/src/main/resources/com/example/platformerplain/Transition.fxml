<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<GridPane
        fx:id="root"
        alignment="CENTER"
        prefHeight="400.0"
        prefWidth="600.0"
        hgap="30"
        vgap="30"
        stylesheets="@styles.css"
        xmlns:fx="http://javafx.com/fxml/1"
        xmlns="http://javafx.com/javafx/22"
        fx:controller="com.example.platformerplain.Controller.TransitionScreenController">

    <!--
        The placeholder area is used to provide vertical spacing in the first row of the GridPane.
    -->
    <Region GridPane.rowIndex="0" minHeight="50" />

    <!-- Enemies killed Label -->
    <Label fx:id="killedLabel"
           text="killed: 0"
           GridPane.rowIndex="0"
           GridPane.columnIndex="0"/>

    <!--

    <- Time Label -->
    <Label fx:id="timeLabel"
           text="Total time: 0"
           GridPane.rowIndex="0"
           GridPane.columnIndex="1"/>

    <!--

    <!- Score Label -->
    <Label fx:id="scoreLabel"
           text="score: 0"
           GridPane.rowIndex="0"
           GridPane.columnIndex="2"/>

    <!--
        Buttons on the transition screen for user interaction.
        Each button, when clicked, invokes a specific
        action defined in the TransitionScreenController class.
    -->
    <Button fx:id="MenuButton"
            onAction="#handleMenu"
            mnemonicParsing="false"
            text="Menu"
            GridPane.rowIndex="2"
            GridPane.columnIndex="0"/>

    <Button fx:id="NextLevelButton"
            onAction="#handleNextLevel"
            text="Next Level"
            GridPane.rowIndex="2"
            GridPane.columnIndex="1"/>

    <Button fx:id="ExitButton"
            onAction="#handleExitGame"
            text="Exit"
            GridPane.rowIndex="2"
            GridPane.columnIndex="2"/>

    <Button
            fx:id="RestartButton"
            onAction="#handleRestart"
            mnemonicParsing="false"
            text="Restart"
            GridPane.rowIndex="1"
            GridPane.columnIndex="1"
    />

</GridPane>
