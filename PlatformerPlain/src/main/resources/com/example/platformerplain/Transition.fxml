<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="root" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" hgap="30" vgap="30" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.example.platformerplain.Controller.TransitionScreenController">

    <!-- Placeholder in the first row for spacing -->
    <Region GridPane.rowIndex="0" minHeight="50" /> <!-- Adjust minHeight as necessary -->

    <!-- Buttons Section in the second row -->
    <Button fx:id="MenuButton" onAction="#handleMenu" mnemonicParsing="false" text="Menu" style="-fx-font-size: 16; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button fx:id="NextLevelButton" onAction="#handleNextLevel" text="Next Level" style="-fx-font-size: 16; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10 20;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button fx:id="ExitButton" onAction="#handleExitGame" text="Exit Game" style="-fx-font-size: 16; -fx-background-color: #F44336; -fx-text-fill: white; -fx-padding: 10 20;" GridPane.rowIndex="2" GridPane.columnIndex="2"/>



</GridPane>
