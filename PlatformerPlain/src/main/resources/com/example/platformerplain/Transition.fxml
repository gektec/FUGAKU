<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<GridPane
        fx:id="root"
        alignment="CENTER"
        prefHeight="400.0"
        prefWidth="600.0"
        hgap="30"
        vgap="30"
        xmlns:fx="http://javafx.com/fxml/1"
        xmlns="http://javafx.com/javafx/22"
        fx:controller="com.example.platformerplain.Controller.TransitionScreenController">

    <!--
        The placeholder area is used to provide vertical spacing in the first row of the GridPane.
    -->
    <Region GridPane.rowIndex="0" minHeight="50" />

    <!-- Score Label -->
    <Label fx:id="scoreLabel"
           text="score: 0"
           style="-fx-font-size: 20; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;"
           GridPane.rowIndex="0"
           GridPane.columnIndex="1"
           GridPane.halignment="CENTER"/>

    <!--
        Buttons on the transition screen for user interaction.
        Each button, when clicked, invokes a specific
        action defined in the TransitionScreenController class.
    -->
    <Button fx:id="MenuButton"
            onAction="#handleMenu"
            mnemonicParsing="false"
            text="Menu"
            style="-fx-font-size: 16; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20;"
            GridPane.rowIndex="2"
            GridPane.columnIndex="0"/>

    <Button fx:id="NextLevelButton"
            onAction="#handleNextLevel"
            text="Next Level"
            style="-fx-font-size: 16; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10 20;"
            GridPane.rowIndex="2"
            GridPane.columnIndex="1"/>

    <Button fx:id="ExitButton"
            onAction="#handleExitGame"
            text="Exit"
            style="-fx-font-size: 16; -fx-background-color: #F44336; -fx-text-fill: white; -fx-padding: 10 20;"
            GridPane.rowIndex="2"
            GridPane.columnIndex="2"/>

    <Button
            fx:id="RestartButton"
            onAction="#handleRestart"
            mnemonicParsing="false"
            text="Restart"
            style="-fx-font-size: 16; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20;"
            GridPane.rowIndex="1"
            GridPane.columnIndex="1"
    />

</GridPane>
